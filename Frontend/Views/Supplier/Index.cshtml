@{
    ViewData["Title"] = "Tedarikçiler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Supplier>
@section styles {
    <link href="~/lib/datatables/dataTables.bootstrap5.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/datatables/buttons.bootstrap5.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/datatables/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="row">
                    <div class="col">
                        <h4 class="page-title">@Localizer["Tedarikçiler"]</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">@Localizer["Envanter Yönetimi"]</a></li>
                            <li class="breadcrumb-item active">@Localizer["Tedarikçiler"]</li>
                        </ol>
                    </div>
                    <div class="col-auto align-self-center">
                        <a href="#" class="btn btn-sm btn-outline-primary" id="Dash_Date">
                            <span class="day-name" id="Day_Name">@Localizer["Today"]:</span>&nbsp;
                            <span class="" id="Select_date">Jan 11</span>
                            <i data-feather="calendar" class="align-self-center icon-xs ms-1"></i>
                        </a>
                        <a href="#" class="btn btn-sm btn-outline-primary">
                            <i data-feather="download" class="align-self-center icon-xs"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">@Localizer["Tedarikçiler"]</h4>
                    <p class="text-muted mb-0">
                        @Localizer["Envanterinizde bulunan ürünlerinizin tedarikçileri"]
                    </p>
                </div>
                <div class="card-body">
                    <div class="button-items">
                        <button type="button" data-bs-toggle="modal" data-bs-target="#addSupplier" class="btn btn-secondary">@Localizer["Tedarikçi Ekle"]</button>
                    </div>
                </div>
                <div class="card-body">
                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>
                                <th>@Localizer["Tedarikçi Adı"]</th>
                                <th>@Localizer["İletişim Bilgisi"]</th>
                                <th>@Localizer["Güncelle"]</th>
                                <th>@Localizer["Sil"]</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model is not null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.SupplierName</td>
                                        <td>@item.ContactInfo</td>
                                        <td>
                                            <div style="display: inline-block;">
                                                <button type="submit" class="btn btn-link text-reset fs-16 px-1" data-bs-toggle="modal" data-bs-target="#updateSupplier" data-id="@item.SupplierId" data-name="@item.SupplierName" data-contact="@item.ContactInfo">
                                                    <i class="mdi mdi-alert-octagram"></i>
                                                </button>
                                            </div>
                                        </td>
                                        <td>
                                            <div style="display: inline-block;">
                                                <input type="hidden" id="updateSupplierId" name="updateSupplierId" value="@item.SupplierId" />
                                                <button type="button" class="btn btn-link text-reset fs-16" onclick="Dele(@item.SupplierId)">
                                                    <i class="mdi mdi-delete-sweep"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="updateSupplier" tabindex="-1" role="dialog" aria-labelledby="updateSupplierLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title m-0" id="updateSupplierLabel">@Localizer["Tedarikçi Güncelle"]</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" name="updateSupplierId" id="updateSupplierId" />
                <div class="form-group">
                    <label for="item-name">@Localizer["Tedarikçi Adı"]</label>
                    <input type="text" class="form-control" id="updateSupplierName" name="updateSupplierName">
                </div>
                <div class="form-group">
                    <label for="item-name">@Localizer["İletişim Bilgisi"]</label>
                    <input type="text" class="form-control" id="updateContactInfo" name="updateContactInfo">
                </div>
                <div class="modal-footer">
                    <button type="button" id="sa-update" class="btn btn-soft-primary btn-sm">@Localizer["Değişiklikleri Kaydet"]</button>
                    <button type="button" class="btn btn-soft-secondary btn-sm" data-bs-dismiss="modal">@Localizer["Kapat"]</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addSupplier" tabindex="-1" role="dialog" aria-labelledby="addSupplierLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title m-0" id="addSupplierLabel">@Localizer["Tedarikçi Ekle"]</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="item-name">@Localizer["Tedarikçi Adı"]</label>
                    <input type="text" class="form-control" id="CreateSupplierName" name="CreateSupplierName" required>
                </div>
                <div class="form-group">
                    <label for="item-name">@Localizer["İletişim Bilgisi"]</label>
                    <input type="text" class="form-control" id="CreateContactInfo" name="CreateContactInfo" required>
                </div>
                <div class="modal-footer">
                    <button type="button" id="sa-create" class="btn btn-soft-primary btn-sm">@Localizer["Kaydet"]</button>
                    <button type="button" class="btn btn-soft-secondary btn-sm" data-bs-dismiss="modal">@Localizer["Kapat"]</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/lib/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/dataTables.bootstrap5.min.js"></script>
    <script src="~/lib/datatables/dataTables.buttons.min.js"></script>
    <script src="~/lib/datatables/buttons.bootstrap5.min.js"></script>
    <script src="~/lib/datatables/jszip.min.js"></script>
    <script src="~/lib/datatables/pdfmake.min.js"></script>
    <script src="~/lib/datatables/vfs_fonts.js"></script>
    <script src="~/lib/datatables/buttons.html5.min.js"></script>
    <script src="~/lib/datatables/buttons.print.min.js"></script>
    <script src="~/lib/datatables/buttons.colVis.min.js"></script>
    <script src="~/lib/datatables/dataTables.responsive.min.js"></script>
    <script src="~/lib/datatables/responsive.bootstrap4.min.js"></script>
    <script src="~/js/pages/jquery.datatable.init.js"></script>
    <script src="~/js/alert/create.js"></script>
    <script src="~/js/alert/delete.js"></script>
    <script src="~/js/alert/update.js"></script>

    <script>
        $('#sa-update').click(function () {
            var supplier = {
                SupplierId: document.getElementById("updateSupplierId").value,
                SupplierName: document.getElementById("updateSupplierName").value,
                ContactInfo: document.getElementById("updateContactInfo").value
            };
            update('Supplier/Update/', supplier, 'supplier');
        });
        $('#sa-create').click(function () {
            debugger;
            var supplier = {
                SupplierId: 0,
                SupplierName: document.getElementById("CreateSupplierName").value,
                ContactInfo: document.getElementById("CreateContactInfo").value
            };
            create('Supplier/Create/', supplier, 'supplier');
        });


        $('#updateSupplier').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var itemId = button.data('id');
            var itemName = button.data('name');
            var itemContact = button.data('contact');
            var modal = $(this);
            modal.find('.modal-body #updateSupplierId').val(itemId);
            modal.find('.modal-body #updateSupplierName').val(itemName);
            modal.find('.modal-body #updateContactInfo').val(itemContact);
        });
        function Dele(t) {
            deleted('Supplier/Delete/', t, 'supplier');
        }

    </script>
   
       
  
}

